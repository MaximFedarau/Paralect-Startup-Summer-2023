{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "API_URL",
        "ACCESS_TOKEN_API_URL",
        "VACANCIES_API_URL",
        "LOGIN",
        "PASSWORD",
        "CLIENT_ID",
        "CLIENT_SECRET",
        "HR",
        "SECRET_KEY"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
