{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "paths": {
      "@styles/*": ["styles/*"],

      "@components/*": ["components/*"],
      "@components": ["components"],

      "@constants/*": ["constants/*"],
      "@constants": ["constants"],

      "@assets/*": ["assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
